/* 
 * Z-INDEX HIERARCHY:
 * 0  - Background image (bg.png)
 * 1  - Portrait photo (photos/1.jpg) 
 * 10 - Main layout grid (navigation, theme switcher)
 * 15 - Animating content during page transitions 
 * 20 - Custom scrollbar
 *
 * BACKDROP-FILTER BUG FIXES:
 * - Fixed blur loss during page transitions
 * - Added comprehensive selectors for both inline styles and Tailwind classes
 * - Proper GPU acceleration and stacking context management
 * - Cross-browser webkit support
 */

/* Page transition animations - Original transform-based animations */

/* Force backdrop-filter to stay active during keyframe animations */
@keyframes slide-out-left {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  100% {
    transform: translateX(-100vw);
    opacity: 0;
  }
}

@keyframes slide-out-right {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  100% {
    transform: translateX(100vw);
    opacity: 0;
  }
}

/* Entry animations - slide in and fade */
@keyframes slide-in-from-right {
  0% {
    transform: translateX(100vw);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slide-in-from-left {
  0% {
    transform: translateX(-100vw);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

/* NEW: Backdrop-filter preservation keyframes */
@keyframes maintain-backdrop-filter {
  0%, 100% {
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }
}

/* CSS classes that apply the animations */
.page-exit-left {
  animation: slide-out-left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  pointer-events: none;
  /* Ensure proper clipping during animation */
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.page-exit-right {
  animation: slide-out-right 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  pointer-events: none;
  /* Ensure proper clipping during animation */
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.page-enter-from-right {
  animation: slide-in-from-right 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  animation-fill-mode: both;
  /* Ensure proper clipping during animation */
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.page-enter-from-left {
  animation: slide-in-from-left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  animation-fill-mode: both;
  /* Ensure proper clipping during animation */
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

/* Media section transitions - same animations but for section content */
.media-section-exit-left {
  animation: slide-out-left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  pointer-events: none;
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.media-section-exit-right {
  animation: slide-out-right 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  pointer-events: none;
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.media-section-enter-from-right {
  animation: slide-in-from-right 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  animation-fill-mode: both;
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
  position: relative;
}

.media-section-enter-from-left {
  animation: slide-in-from-left 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  animation-fill-mode: both;
  contain: layout style paint;
  /* Ensure content stays above background elements during animation */
  z-index: 15;
