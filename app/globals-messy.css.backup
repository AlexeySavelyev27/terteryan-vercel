}

/* Enhanced responsive design improvements */
@media (max-width: 768px) {
  /* Improve mobile navigation */
  .theme-buttons {
    flex-direction: column;
    gap: 0.75rem;
    align-items: flex-start;
  }
  
  /* Better mobile typography */
  h1, h2, h3 {
    line-height: 1.2;
  }
  
  /* Mobile-optimized media grids */
  .media-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}

@media (max-width: 480px) {
  /* Simplified animations for mobile */
  .page-exit-left,
  .page-exit-right,
  .media-section-exit-left,
  .media-section-exit-right {
    animation: fade-out 0.3s ease-out forwards;
    /* Maintain proper z-index on mobile */
    z-index: 15;
    position: relative;
  }
  
  .page-enter-from-left,
  .page-enter-from-right,
  .media-section-enter-from-left,
  .media-section-enter-from-right {
    animation: fade-in 0.3s ease-in forwards;
    /* Maintain proper z-index on mobile */
    z-index: 15;
    position: relative;
  }
}

@keyframes fade-out {
  from { opacity: 1; }
  to { opacity: 0; }
}

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  /* Disable animations for users who prefer reduced motion */
  .page-exit-left,
  .page-exit-right,
  .page-enter-from-left,
  .page-enter-from-right,
  .media-section-exit-left,
  .media-section-exit-right,
  .media-section-enter-from-left,
  .media-section-enter-from-right {
    animation: none;
    transition: opacity 0.2s ease;
    /* Still need proper z-index even with reduced motion */
    z-index: 15;
    position: relative;
  }
  
  .transition-all {
    transition: opacity 0.2s ease;
  }
}

/* Enhanced focus states for better accessibility */
.nav-button:focus-visible {
  outline: 2px solid currentColor;
  outline-offset: 4px;
  border-radius: 4px;
}

/* Media category hover enhancements */
.media-category-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.media-category-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

/* Photo gallery improvements */
.photo-grid-item {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.photo-grid-item:hover {
  transform: scale(1.02);
}

/* Loading states */
.loading-spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Print styles */
@media print {
  .fixed {
    position: static;
  }
  
