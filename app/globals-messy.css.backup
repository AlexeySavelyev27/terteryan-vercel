  backdrop-filter: blur(20px) !important;
  -webkit-backdrop-filter: blur(20px) !important;
}

/* Ensure backdrop-filter works on elements with border and background */
[style*="backdrop-filter"] {
  -webkit-backdrop-filter: blur(20px);
  backdrop-filter: blur(20px);
  isolation: isolate;
  /* Hint to browser to maintain backdrop-filter during animations */
  will-change: backdrop-filter;
}

/* Specific fix for animated containers - but only for will-change, not backdrop-filter */
